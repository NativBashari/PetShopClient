
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>

<div>
    <div class="align-content-center">
        <a class="btn btn-success" asp-action="AddCategory">Add new catgory</a>
    </div>
     <table class="table table-hover">
        <thed>
            <tr>
                <th>Category Name</th>
                <th>Animals count</th>
                <th>Operations</th>
            </tr>
        </thed>
        <tbody>
            @foreach(var category in Model){
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Animals.Count</td>
                    <td><a asp-action="Update" class="btn btn-light" asp-route-id="@category.CategoryId">Edit</a></td>
                    <td> <a asp-action="Delete" class="btn btn-danger" asp-route-id="@category.CategoryId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

